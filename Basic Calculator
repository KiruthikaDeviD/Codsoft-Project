<body>

<div class="calculator">
    <input type="text" id="display" readonly>

    <div class="buttons">
        <button class="clear">C</button>
        <button>/</button>
        <button>*</button>
        <button>-</button>

        <button>7</button>
        <button>8</button>
        <button>9</button>
        <button class="operator">+</button>

        <button>4</button>
        <button>5</button>
        <button>6</button>
        <button>=</button>

        <button>1</button>
        <button>2</button>
        <button>3</button>
        <button>0</button>
    </div>
</div>

<script>
    const display = document.getElementById("display");
    const buttons = document.querySelectorAll("button");

    buttons.forEach(button => {
        button.addEventListener("click", function() {
            const value = this.innerText;

            if (value === "C") {
                display.value = "";
            }
            else if (value === "=") {
                try {
                    display.value = eval(display.value);
                } catch {
                    display.value = "Error";
                }
            }
            else {
                display.value += value;
            }
        });
    });
</script>

</body>
